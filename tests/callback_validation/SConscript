# Build and run callback_validation test suite
# Tests auto-generated decode callbacks for pb_callback_t fields

Import("env")

# Clone environment to set validation-specific options
test_env = env.Clone()

# Enable validation code generation with root message mode
test_env.Replace(NANOPBFLAGS = "--validate,--root-message=RootMessage,-x,validate.proto")

# Remove -ansi flag since pb_validate.h requires C99 features (inline)
# Also enable C99 for stdbool.h
cflags = str(test_env.get('CFLAGS', ''))
if '-ansi' in cflags:
    cflags = cflags.replace('-ansi', '')
test_env.Replace(CFLAGS = cflags + ' -std=c99 ')

# Prepend the build directory to CPPPATH
test_env.Prepend(CPPPATH = ['.'])

# Build pb_validate.o without extra strict flags
test_env.Object("pb_validate.o", "$NANOPB/pb_validate.c")

# Generate nanopb sources for the proto file
pb_files = test_env.NanopbProto("callback_validation")
pb_sources = ["callback_validation.pb.c"]
validate_c = "callback_validation_validate.c"
validate_h = "callback_validation_validate.h"
test_env.SideEffect(validate_c, pb_files)
test_env.SideEffect(validate_h, pb_files)
validate_sources = [validate_c]

# All C source files for the test binary
sources = ["test_callback_validation.c"] + pb_sources + validate_sources

# Build the test binary
test_prog = test_env.Program(
    sources + [
        "$COMMON/pb_encode.o",
        "$COMMON/pb_decode.o",
        "$COMMON/pb_common.o",
        "pb_validate.o"
    ]
)

# Run the test
test_env.RunTest(test_prog)
